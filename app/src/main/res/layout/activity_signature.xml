<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue">

    <TextView

        android:textStyle="bold"
        android:textSize="@dimen/h1"
        android:layout_margin="@dimen/margin1"
        android:text="Signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@drawable/groupuser"
        android:id="@+id/edtSNName"
        android:hint="Name - Surname"
        android:inputType="text"
        android:layout_marginLeft="@dimen/h2"
        android:layout_marginRight="@dimen/margin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout

        android:layout_margin="@dimen/margin1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/linSNSign"
       android:background="@drawable/bgpd2"/>




    <LinearLayout
        android:id="@+id/linSNButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <Button

            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/btn_signature"
            android:id="@+id/btnSNSave"
            android:text="Save"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <Button
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/btn_retrun_yellow"
            android:id="@+id/btnSNClear"
            android:text="Clear"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>