<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:textSize="@dimen/h2"
        android:layout_margin="@dimen/margin1"
        android:text="Return Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/h3"
        android:layout_marginLeft="@dimen/margin2"
       android:layout_marginRight="@dimen/margin2"
        android:layout_marginBottom="@dimen/margin1"
        android:text="Store Name : "
        android:id="@+id/txtRTStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/linRTTop"
        android:layout_marginLeft="@dimen/margin2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h3"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_weight="10"
            />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h3"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_weight="10"
            />

        <TextView
            android:text="QTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h3"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_weight="10"
            />
    </LinearLayout>



    <ListView

        android:id="@+id/lvRCContainer"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_above="@+id/linRCButtom"
        >


    </ListView>

    <LinearLayout


        android:id="@+id/linRCButtom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        >


        <Button
            android:text="Finish"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin1"
            android:id="@+id/btnRTFinish"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>